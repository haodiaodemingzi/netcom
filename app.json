{
  "expo": {
    "name": "漫画阅读器",
    "slug": "comic-reader",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.comicreader.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.comicreader.app",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "scheme": "comic-reader",
    "plugins": [
      "expo-router",
      [
        "expo-media-library",
        {
          "photosPermission": "允许访问相册以保存下载的漫画图片",
          "savePhotosPermission": "允许保存图片到相册",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}
